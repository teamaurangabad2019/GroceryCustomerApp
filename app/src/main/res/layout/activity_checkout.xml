<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey_3"
    tools:context="com.teammandroid.dairyapplication.admin.activities.CheckoutActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:background="@color/colorPrimary">

        <LinearLayout
            android:id="@+id/rl_toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="vertical"
            android:paddingTop="5dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_centerVertical="true"
                    android:id="@+id/back_about"
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:background="@drawable/ic_arrow_back"
                    android:backgroundTint="@color/colorTextWhite" />


                <TextView
                    android:layout_toRightOf="@id/back_about"
                    android:layout_centerVertical="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="120dp"
                    android:text="Checkout"
                    android:textColor="@color/colorTextWhite"
                    android:textSize="@dimen/toolbar_text" />


            </RelativeLayout>

            <!--region tab-->
            <!--  <include layout="@layout/custom_tab_layout"/>-->

        </LinearLayout>
    </androidx.appcompat.widget.Toolbar>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none"
        android:layout_below="@id/toolbar">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/padding_5">

        <LinearLayout
            android:id="@+id/ll_navigation"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:weightSum="4"
            android:layout_margin="@dimen/padding_10"
            android:orientation="horizontal"
            android:gravity="center_horizontal">

            <ImageView
                android:id="@+id/iv_delivery"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"/>

            <TextView
                android:id="@+id/tv_delivery"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:layout_weight="1"
                android:text="Delivery"
                android:layout_marginLeft="10dp"
                android:layout_gravity="center"
                android:textColor="@color/colorBlack"
                android:textSize="14sp" />

            <ImageView
                android:id="@+id/iv_payment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"/>

            <TextView
                android:id="@+id/tv_payment"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:layout_weight="1"
                android:text="Payment"
                android:layout_gravity="center_vertical"
                android:textColor="@color/colorBlack"
                android:textSize="14sp"
                android:layout_marginLeft="@dimen/padding_10"/>

        </LinearLayout>

            <!--Layout1-->
        <LinearLayout
            android:id="@+id/ll_layout1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone"
            android:layout_below="@id/ll_navigation">

            <androidx.cardview.widget.CardView
                android:id="@+id/cv_list"
                android:elevation="4dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="4dp"
                android:paddingBottom="5dp"
                tools:targetApi="lollipop"
                android:layout_margin="5dp"
                app:cardElevation="@dimen/padding_5"
                android:layout_below="@id/ll_navigation">

            <RelativeLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="10dp"
                android:padding="@dimen/padding_10">

                <ImageView
                    android:id="@+id/iv_edit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_edit_black_24dp"
                    android:layout_alignParentRight="true"
                    android:padding="@dimen/padding_5"/>

                <LinearLayout
                    android:id="@+id/ll_details"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                <TextView
                    android:id="@+id/tv_txt_address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:gravity="center_vertical"
                    android:text="Delivery Address"
                    android:textColor="@color/colorPrimary"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/tv_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:gravity="center_vertical"
                    android:layout_weight="1"
                    android:text="Delivery"
                    android:textColor="@color/colorBlack"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tv_address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:gravity="center_vertical"
                    android:layout_weight="1"
                    android:text="Delivery"
                    android:textColor="@color/colorBlack"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tv_mobile"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:gravity="center_vertical"
                    android:layout_weight="1"
                    android:text="Mobile : "
                    android:textColor="@color/colorBlack"
                    android:textSize="14sp" />
                </LinearLayout>

                <RadioGroup
                    android:id="@+id/groupradio"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="3"
                    android:layout_marginTop="5dp"
                    android:orientation="horizontal"
                    android:layout_marginBottom="5dp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:visibility="visible"
                    android:layout_below="@id/ll_details">

                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="45dp"
                        android:id="@+id/radio_id1"
                        android:text="Home"
                        android:textSize="14dp"
                        android:layout_marginRight="@dimen/padding_10"
                        android:layout_weight="1"
                        android:layout_marginLeft="@dimen/padding_10"
                        android:onClick="onRadioButtonClicked1"/>

                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="45dp"
                        android:id="@+id/radio_id2"
                        android:text="Work"
                        android:textSize="14dp"
                        android:layout_weight="1"
                        android:onClick="onRadioButtonClicked1"/>

                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="45dp"
                        android:id="@+id/radio_id3"
                        android:text="My Location"
                        android:textSize="14dp"
                        android:layout_weight="1"
                        android:onClick="onRadioButtonClicked1"/>



                </RadioGroup>

            </RelativeLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cv_pick_location"
                android:elevation="4dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="4dp"
                android:paddingBottom="5dp"
                tools:targetApi="lollipop"
                android:layout_margin="5dp"
                app:cardElevation="@dimen/padding_5"
                android:layout_below="@id/cv_list"
                android:visibility="gone">

                <RelativeLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="10dp"
                    android:padding="@dimen/padding_10">


                    <LinearLayout
                        android:id="@+id/ll_address"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:gravity="center_vertical"
                            android:text="Current Location"
                            android:textColor="@color/colorPrimary"
                            android:textSize="16sp" />

                        <TextView
                            android:id="@+id/tv_pick_address"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:drawableLeft="@drawable/ic_location_on_black_24dp"
                            android:drawablePadding="10dp"
                            android:gravity="center_vertical"
                            android:text="Current Location"
                            android:textColor="@color/colorBlack"
                            android:textSize="14sp" />

                      <LinearLayout
                          android:layout_width="match_parent"
                          android:layout_height="120dp"
                          android:layout_marginTop="@dimen/padding_5"
                          android:background="@color/grey_10"/>

                        <Button
                            android:id="@+id/btn_pick"
                            android:layout_width="wrap_content"
                            android:layout_height="35dp"
                            android:layout_gravity="center_horizontal"
                            android:text="Update Location"
                            android:textAllCaps="false"
                            android:textSize="14dp"
                            android:layout_marginTop="10dp"
                            android:textColor="@color/white"
                            android:background="@color/grey_40"
                            android:paddingLeft="@dimen/padding_10"
                            android:paddingRight="@dimen/padding_10"/>

                    </LinearLayout>


                </RelativeLayout>


            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cv_promocode"
                android:elevation="4dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="4dp"
                android:paddingBottom="5dp"
                tools:targetApi="lollipop"
                android:layout_margin="5dp"
                app:cardElevation="@dimen/padding_5"
                android:visibility="gone"
                android:layout_below="@id/cv_pick_location">

                <RelativeLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="10dp">


                    <RelativeLayout
                        android:id="@+id/ll_promocode"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="@dimen/padding_10"
                        >

                        <TextView
                            android:id="@+id/txt_promo"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:gravity="center_vertical"
                            android:text="Have a Promo Code ?"
                            android:textColor="@color/colorPrimary"
                            android:textSize="16sp" />

                        <ImageView
                            android:id="@+id/iv_refresh"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_refresh_black_24dp"
                            android:layout_alignParentRight="true"
                            android:padding="@dimen/padding_5"/>

                        <TextView
                            android:id="@+id/tv_promocode"
                            android:layout_width="200dp"
                            android:layout_height="45dp"
                            android:layout_marginTop="10dp"
                            android:gravity="center_vertical"
                            android:textColor="@color/colorBlack"
                            android:textSize="14sp"
                            android:layout_below="@id/txt_promo"
                            android:background="@drawable/border_rectangle"/>


                        <Button
                            android:id="@+id/btn_apply_promo"
                            android:layout_width="wrap_content"
                            android:layout_height="40dp"
                            android:text="Apply"
                            android:textAllCaps="false"
                            android:textSize="14dp"
                            android:layout_alignParentRight="true"
                            android:textColor="@color/white"
                            android:layout_marginTop="15dp"
                            android:background="@color/grey_40"
                            android:padding="@dimen/padding_10"
                            android:layout_below="@id/txt_promo"
                            android:paddingLeft="@dimen/padding_10"
                            android:paddingRight="@dimen/padding_10"/>

                    </RelativeLayout>


                </RelativeLayout>


            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/padding_10"
                android:layout_below="@+id/cv_promocode" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:gravity="center_vertical"
                    android:text="Order Summary"
                    android:textColor="@color/colorPrimary"
                    android:textSize="16sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="4">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:gravity="center_vertical"
                        android:text="Product Name"
                        android:textColor="@color/colorBlack"
                        android:textSize="16sp"
                        android:layout_weight="1"/>

                 <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:gravity="center_vertical"
                        android:text="Qty"
                        android:textColor="@color/colorBlack"
                        android:textSize="16sp"
                        android:layout_weight="1"/>

                 <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:gravity="center_vertical"
                        android:text="Price"
                        android:textColor="@color/colorBlack"
                        android:textSize="16sp"
                        android:layout_weight="1"/>

                 <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:gravity="center_vertical"
                        android:text="Subtotal"
                        android:textColor="@color/colorBlack"
                        android:textSize="16sp"
                        android:layout_weight="1"/>

                </LinearLayout>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recycler_view_cart"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:background="@color/grey_3"
                    android:paddingTop="@dimen/padding_10"
                    android:scrollbars="vertical"
                    android:scrollingCache="true" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="4"
                    android:visibility="gone">

                    <TextView
                        android:id="@+id/tv_product_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:gravity="center_vertical"
                        android:text="Product Name"
                        android:textSize="16sp"
                        android:layout_weight="1"/>

                    <TextView
                        android:id="@+id/tv_qty"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:gravity="center_vertical"
                        android:text="Qty"
                        android:textSize="16sp"
                        android:layout_weight="1"/>

                    <TextView
                        android:id="@+id/tv_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:gravity="center_vertical"
                        android:text="Price"
                        android:textSize="16sp"
                        android:layout_weight="1"/>

                    <TextView
                        android:id="@+id/tv_amtsubtotal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:gravity="center_vertical"
                        android:text="Subtotal"
                        android:textSize="16sp"
                        android:layout_weight="1"/>

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/colorBlack"
                    android:layout_marginTop="@dimen/padding_10"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_alignParentBottom="true">

                    <RelativeLayout
                        android:id="@+id/rl_one"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/padding_5">

                        <TextView
                            android:id="@+id/tv_subtotal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Subotal"
                            android:layout_alignParentLeft="true"
                            android:textColor="@color/colorBlack" />

                        <TextView
                            android:id="@+id/tv_subtotalAmt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:text="0.0"
                            android:textColor="@color/colorBlack" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/rl_three"
                        android:layout_below="@id/rl_two"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/padding_5"
                        android:visibility="gone">

                        <TextView
                            android:id="@+id/tv_total"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Tax"
                            android:layout_alignParentLeft="true"
                            android:textColor="@color/colorBlack" />

                        <TextView
                            android:id="@+id/tv_totalAmt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0.0"
                            android:layout_alignParentRight="true"
                            android:textColor="@color/colorBlack" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/rl_two"
                        android:layout_below="@id/rl_one"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/padding_5">

                        <TextView
                            android:id="@+id/tv_deliveryCharge"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Delivery Charge"
                            android:layout_alignParentLeft="true"
                            android:textColor="@color/colorBlack" />

                        <TextView
                            android:id="@+id/tv_deliveryAmt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0.0"
                            android:layout_alignParentRight="true"
                            android:textColor="@color/colorBlack" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/rl_four"
                        android:layout_below="@+id/rl_three"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/padding_10"
                        android:background="@color/colorWhite">

                        <TextView
                            android:id="@+id/tv_finalTotalAmt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Total Rs 435"
                            android:textSize="20dp"
                            android:layout_centerVertical="true"
                            android:textStyle="bold"
                            android:layout_alignParentLeft="true"
                            android:textColor="@color/colorBlack" />

                        <TextView
                            android:id="@+id/tv_finalTotal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Confirm"
                            android:textSize="16dp"
                            android:background="@drawable/button_background"
                            android:drawableRight="@drawable/ic_check_black_24dp"
                            android:drawableTint="@color/colorWhite"
                            android:drawablePadding="@dimen/padding_10"
                            android:layout_alignParentRight="true"
                            android:textColor="@color/colorWhite"
                            android:paddingLeft="@dimen/padding_20"/>

                    </RelativeLayout>

                </RelativeLayout>

            </LinearLayout>

        </LinearLayout>
            <!--End 1-->

            <!--Layout2-->
         <RelativeLayout
                android:id="@+id/rl_layout2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:visibility="visible"
                android:layout_below="@id/ll_navigation">

                <androidx.cardview.widget.CardView
                    android:id="@+id/cv_list1"
                    android:elevation="4dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:cardCornerRadius="4dp"
                    android:paddingBottom="5dp"
                    tools:targetApi="lollipop"
                    android:layout_margin="5dp"
                    app:cardElevation="@dimen/padding_5"
                    >

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <RelativeLayout
                            android:id="@+id/rl_payOption"
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginBottom="10dp"
                            android:padding="@dimen/padding_10">

                        <LinearLayout
                            android:id="@+id/ll_details1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">
                            <TextView
                                android:id="@+id/tv_txt_address1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:gravity="center_vertical"
                                android:text="Payment Method"
                                android:textColor="@color/colorPrimary"
                                android:textSize="16sp" />

                            <TextView
                                android:id="@+id/tv_name1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:gravity="center_vertical"
                                android:layout_weight="1"
                                android:text="Delivery"
                                android:textColor="@color/colorBlack"
                                android:textSize="14sp"
                                android:visibility="gone"/>

                            <TextView
                                android:id="@+id/tv_address1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:gravity="center_vertical"
                                android:layout_weight="1"
                                android:text="Delivery"
                                android:textColor="@color/colorBlack"
                                android:textSize="14sp"
                                android:visibility="gone"/>

                            <TextView
                                android:id="@+id/tv_mobile1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:gravity="center_vertical"
                                android:layout_weight="1"
                                android:text="Mobile : "
                                android:textColor="@color/colorBlack"
                                android:textSize="14sp"
                                android:visibility="gone"/>
                        </LinearLayout>

                        <RadioGroup
                            android:id="@+id/groupradio1"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:weightSum="3"
                            android:layout_marginTop="5dp"
                            android:orientation="vertical"
                            android:layout_marginBottom="5dp"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:paddingRight="@dimen/padding_10"
                            android:paddingLeft="@dimen/padding_10"
                            android:visibility="visible"
                            android:layout_below="@id/ll_details1"
                            android:checkedButton="@+id/radio_cod">

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                            <ImageView
                                android:id="@+id/iv_cod"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/ic_vol_type_tv_light"
                                android:layout_centerVertical="true"
                                android:layout_alignParentLeft="true"
                                android:layout_marginLeft="@dimen/padding_10"/>

                            <TextView
                                android:id="@+id/tv_cod"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:gravity="center_vertical"
                                android:layout_weight="1"
                                android:text="Cash on Delivery "
                                android:textColor="@color/colorBlack"
                                android:textSize="14sp"
                                android:layout_centerInParent="true"/>

                                <RadioButton
                                    android:layout_width="wrap_content"
                                    android:layout_height="45dp"
                                    android:id="@+id/radio_cod"
                                    android:layout_marginRight="@dimen/padding_20"
                                    android:layout_weight="1"
                                    android:layout_centerVertical="true"
